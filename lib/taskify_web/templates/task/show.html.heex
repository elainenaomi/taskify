<h1>Show Task</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @task.name %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @task.description %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.task_path(@conn, :edit, @task) %></span> |
<span><%= link "All Sub-Tasks", to: Routes.task_sub_task_path(@conn, :index, @task) %></span> |
<span><%= link "All Tasks", to: Routes.task_path(@conn, :index) %></span>
